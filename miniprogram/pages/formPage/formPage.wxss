page {
  color: #333333;
  font-size: 14px;
  background-color: #eeeeee;
}
.form-fill {
  display: block;
  padding: 10px;
  background-color: #fff;
}
.title {
  font-size: 16px;
  font-weight: bold;
  line-height: 50px;
  padding-left: 10px;
}
.input-box {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding-top: 5px;
  padding-bottom: 5px;
  margin-bottom: 10px;
}
input {
  text-align: right;
}
textarea {
  width: 100%;
  height: 100px;
  padding-top: 10px;
}
.input-box:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -.5px;
  background-color: #e8e8e8;
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.warning {
  color: #7b7b7b;
  font-size: 12px;
  padding-top: 10px;
  padding-left: 10px;
  display: block;
}
.post-btn {
  width: 60%;
  display: block;
  line-height: 40px;
  text-align: center;
  margin-left: 20%;
  margin-top: 30px;
  border-radius: 4px;
  font-size: 16px;
  background-color: #ffffff;
}