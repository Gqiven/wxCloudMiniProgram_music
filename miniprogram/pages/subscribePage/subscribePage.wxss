page {
  font-size: 14px;
  background-color: #eeeeee;
}
.words-box {
  width: 95%;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 150px;
  margin-bottom:10px;
  color: #ffffff;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.4);
}
.share-box .title {
  color: #333333;
  padding-left: 10px;
  font-weight: bold;
  font-size: 16px;
  line-height: 40px;
}
.music-list-box {
  width: 100%;
  color: #7b7b7b;
  border-radius: 10px 10px 0 0;
  background-color: #ffffff;
}
.list-title {
  line-height: 40px;
  padding-left: 10px;
}
.music-list {
  display: block;
  width: auto;
  margin-left: 15px;
}
.music-list .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
  padding-right: 15px;
  box-sizing: border-box;
}
.item-index {
  font-weight: bold;
  font-size: 13px;
  padding-right: 20px;
}
.item-info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-top: 5px;
  padding-bottom: 5px;
}
.music-name {
  color: #333333;
  font-size: 14px;
  padding-bottom: 5px;
}
.hairline {
  position: relative;
}
.hairline:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -.5px;
  background-color: #e8e8e8;
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.playing-box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  color: #7b7b7b;
  font-size: 12px;
  background-color: #ffffff;
  padding: 5px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
div, p {
  display: block;
  width: 100%;
}
.playing-box image {
  width: 65px;
  margin-right: 10px;
}
.playing-box span {
  display: block;
}
.playing-box .iconfont {
  font-size:30px;
  padding-right:20px;
}
.icon-laba {
  color: #d50900;
}